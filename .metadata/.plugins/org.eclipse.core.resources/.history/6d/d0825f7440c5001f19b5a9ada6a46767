package ap.Pattern;

/*
 * " *
 *  * *
 * * * * "*/
public class EquilateralTriangle {
    public static void main(String[] args) {
    	int r=4;
    	int c=5;
    	for(int i=1; i<r; i++) {
    		for(int j=1; j<c-i-1; j++) {
    			System.out.print(" ");	
    		}
    		for(int k=1; k<=i; k++) {
    			System.out.print("*");
    		}
    	}
    	System.out.println();
	
    }
}
